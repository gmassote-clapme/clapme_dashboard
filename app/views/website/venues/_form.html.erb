<%= form_for(@clapme_venue, :html => { id: 'venueForm', :class => "form-horizontal" }, url: specific_url) do |f| %>
  <% if @clapme_venue.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@clapme_venue.errors.count, "error") %> prohibited this clapmerts_venue from being saved:</h4>

      <ul>
      <% @clapme_venue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :venue_type, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:venue_type, Clapme::Venue.venue_types.keys.collect {|r| [r.capitalize, r]}, {prompt: nil}, {class: "form-control chosen-select"}) %>
    </div>
  </div>
  <div class="form-group phone_formatted">
    <%= f.label :phone, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :phone, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group phone_formatted">
    <%= f.label :slug, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :slug, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:state, Clapme::MachineState::VenueState.all.keys.collect {|r| [r.capitalize, r]}, {prompt: nil}, {class: "form-control chosen-select"}) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :confirmation_token, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :confirmation_token, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
