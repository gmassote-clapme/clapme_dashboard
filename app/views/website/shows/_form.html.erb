    <%= f.label :started_at, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :started_at, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :finished_at, :class => "col-sm-2 control-label" %>
