<%= form_for(@clapme_show, :html => { :class => "form-horizontal" }, url: specific_url) do |f| %>
  <% if @clapme_show.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@clapme_show.errors.count, "error") %> prohibited this clapmerts_show from being saved:</h4>

      <ul>
