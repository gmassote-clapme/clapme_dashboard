<div class="page-header">
  <%= link_to new_website_show_path, :class => 'btn btn-primary' do %>
      <span class="glyphicon glyphicon-plus"></span>
      New Show
  <% end %>
  <h1>Listing shows</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th>Name</th>
      <th>Scheduled start at</th>
      <th>Scheduled finish at</th>
      <th>Duration mm</th>
      <th>Slug</th>
      <th>State</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
    </thead>

    <tbody>
        <tr>
          <% @clapme_shows.each do |clapme_show| %>
            <td><%= clapme_show.name %></td>
            <td><%= clapme_show.scheduled_start_at %></td>
            <td><%= clapme_show.scheduled_finish_at %></td>
            <td><%= clapme_show.duration_mm %></td>
            <td><%= clapme_show.slug %></td>
            <td><%= clapme_show.state %></td>
            <td><%= link_to 'Show', website_show_path(clapme_show.id) %></td>
            <td><%= link_to 'Edit', edit_website_show_path(clapme_show.id) %></td>
            <td><%= link_to 'Destroy', website_show_path(clapme_show.id), method: :delete, data: {confirm: 'Are you sure?'} %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
