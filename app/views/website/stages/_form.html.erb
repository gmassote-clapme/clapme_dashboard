<%= form_for(@clapme_stage, :html => { :class => "form-horizontal" }, url: specific_url) do |f| %>
  <% if @clapme_stage.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@clapme_stage.errors.count, "error") %> prohibited this website_stage from being saved:</h4>

      <ul>
      <% @clapme_stage.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :slug, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :slug, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :has_partner, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.check_box :has_partner, :class => "form-control" %>
    </div>
  </div>
    <div class="form-group">
      <%= f.label :image_background, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.file_field :image_background, :class => "form-control" %>
      </div>
    </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>

    <hr>

    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :last_image_background, :class => "control-label" %>
      </div>
      <div class="col-sm-10">
        <% if @clapme_stage.image_background.exists? %>
            <small>Tamanho original:
              <a href="<%= image_url @clapme_stage.image_background.url(:original)%>">ver</a>
            </small>
            <%= image_tag @clapme_stage.image_background.url(:thumb), class: "img-thumbnail" %></div>
        <% else %>
            <p class="form-control-static">No image saved</p>
        <% end %>
        </div>
    </div>
<% end %>
