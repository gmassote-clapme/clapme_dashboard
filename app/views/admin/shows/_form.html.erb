      <%= f.label :scheduled_finish_at %>
      <br>
      <%= f.datetime_select :scheduled_finish_at %>
    </div>
    <div class="field">
      <%= f.label :duration_mm %>
      <br>
      <%= f.text_field :duration_mm %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :payment_amount %>
      <br>
      <%= f.text_field :payment_amount %>
    </div>
    <div class="field">
      <%= f.label :video_teaser %>
      <br>
      <%= f.text_field :video_teaser %>
    </div>
    <div class="field">
      <%= f.label :url_stream %>
      <br>
      <%= f.text_field :url_stream %>
    </div>
    <div class="field">
      <%= f.label :url_stream_vip %>
      <br>
      <%= f.text_field :url_stream_vip %>
