      <div class="field">
        <%= f.label :photo_cover %>
        <br>
        <%= f.file_field :photo_cover %>

        <br>
        or
        <br>
        <%= f.label :photo_cover_remote_url %>
        <%= f.text_field :photo_cover_remote_url %>

        <br>
        <br>
        <% if @admin_show.photo_cover.exists? %>
            <%= image_tag @admin_show.photo_cover.url(:thumb) %></div>
        <% end %>
