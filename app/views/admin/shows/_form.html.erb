<%= form_for(@admin_show, url: specific_url) do |f| %>
    <% if @admin_show.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@admin_show.errors.count, "error") %> prohibited this admin_show from being saved:</h2>

          <ul>
            <% @admin_show.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
