<h1>Listing stages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Slug</th>
      <th>Description</th>
      <th>Has partner</th>
      <th>Image background?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_stages.each do |admin_stage| %>
      <tr>
        <td><%= admin_stage.name %></td>
        <td><%= admin_stage.slug %></td>
        <td><%= admin_stage.description %></td>
        <td><%= admin_stage.has_partner %></td>
        <td><%= admin_stage.image_background.exists? %></td>
        <td><%= link_to 'Show', admin_stage_path(admin_stage.id) %></td>
        <td><%= link_to 'Edit', edit_admin_stage_path(admin_stage.id) %></td>
        <td><%= link_to 'Destroy', admin_stage_path(admin_stage.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stage', new_admin_stage_path %>
