<%= form_for(@admin_stage, url: specific_url) do |f| %>
    <% if @admin_stage.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@admin_stage.errors.count, "error") %> prohibited this admin_stage from being saved:</h2>

          <ul>
            <% @admin_stage.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :slug %>
      <br>
      <%= f.text_field :slug %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :has_partner %>
      <br>
      <%= f.check_box :has_partner %>
    </div>
    <div class="field">
      <%= f.label :image_background %>
      <br>
      <%= f.file_field :image_background %>

      <br>
      or
      <br>
      <%= f.label :image_background_remote_url %>
      <%= f.text_field :image_background_remote_url %>

      <br>
      <br>
      <% if @admin_stage.image_background.exists? %>
        <%= image_tag @admin_stage.image_background.url(:thumb) %></div>
      <% end %>
    </div>
    <div class="actions">
      <%= f.submit 'Enviar', class: 'btn btn-primary' %>
    </div>
<% end %>
